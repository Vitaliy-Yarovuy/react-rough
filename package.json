{
	"name": "react-rough",
	"version": "2.0.0-rc.2",
	"description": "React Bindings for Rough.js",
	"source": "src/index.tsx",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"umd": "dist/index.js",
	"scripts": {
		"test": "jest",
		"lint": "eslint src/*",
		"test:watch": "jest --watch",
		"coverage": "jest --coverage",
		"prepublish": "npm run build",
		"build": "microbundle --external react,roughjs",
		"prebuild": "rimraf build dist",
		"report-coverage": "cat ./coverage/lcov.info | codecov",
		"storybook": "start-storybook -p 6006 -c .storybook",
		"prettier": "prettier --write '{src,__tests__}/*.tsx' '{src,__tests__}/*.ts'"
	},
	"files": [
		"dist",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ooade/react-rough.git"
	},
	"bugs": {
		"url": "https://github.com/ooade/react-rough/issues"
	},
	"author": "Ademola Adegbuyi <ooade96@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.7.2",
		"@babel/preset-env": "^7.7.1",
		"@babel/preset-react": "^7.7.0",
		"@storybook/addon-info": "^5.2.6",
		"@storybook/addon-knobs": "^5.2.6",
		"@storybook/addons": "^5.2.6",
		"@storybook/react": "^5.2.6",
		"@testing-library/react": "^9.3.2",
		"@types/jest": "^24.0.23",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"awesome-typescript-loader": "^5.2.1",
		"babel-cli": "^6.26.0",
		"babel-loader": "^8.0.6",
		"codecov.io": "^0.1.6",
		"eslint": "^6.6.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"ghooks": "^2.0.4",
		"jest": "^24.9.0",
		"microbundle": "^0.11.0",
		"prettier": "^1.19.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"rimraf": "^3.0.0",
		"roughjs": "^3.1.0",
		"storybook-addon-jsx": "^7.1.13",
		"ts-jest": "^24.2.0",
		"typescript": "^3.7.2"
	},
	"peerDependencies": {
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"roughjs": "^3.1.0"
	},
	"config": {
		"ghooks": {
			"pre-commit": "npm run prettier"
		}
	},
	"jest": {
		"collectCoverageFrom": [
			"<rootDir>/src/**.js"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	},
	"dependencies": {
		"use-deep-compare-effect": "^1.3.0"
	}
}
